# vim: filetype=snippets

extends sh

snippet ifsys "switch uname -s" b
case $(uname -s) in
	Darwin )
		${1:# for MacOS}
		;;
	CYGWIN* )
		${2:# for Cygwin on Windows}
		;;
	Linux )
		${3:# for Linux}
		;;
	* )
		echo "\e[31m[.zshrc]: un-recognized platform."
		;;
esac
$0
endsnippet

snippet echoc "colorfull echo" b
echo "\e[${1:31}m${2:text}\e[0m."
endsnippet

snippet ifarch "if is on Arch Linux" b
case $(uname -r) in
	*ARCH )
		${1:#code for Arch Linux}
		;;
esac
endsnippet

